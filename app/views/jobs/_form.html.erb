<%# app/views/job/_form %>

<% if @company %>
  <%@variable = [@company, @job]%>
<% else %>
  <%@variable = @job%>
<% end %>
<%= form_for @variable do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category_id %>
  <%= f.collection_select(:category_id, @categories, :id, :title)%>

  <%if @company%>
    <section class="button-group">
      <button class="cancel-button">
        <%= link_to 'Cancel', company_jobs_path(@company) %>
      </button>
      <%= f.submit class: 'submit-button' %>
    </section>
  <%else%>
    <%= f.label :company_id %>
    <%= f.collection_select(:company_id, Company.all, :id, :name)%>
    <section class="button-group">
      <button class="cancel-button">
        <%= link_to 'Cancel', jobs_path %>
      </button>
      <%= f.submit class: 'submit-button' %>
    </section>
  <% end %>

<% end %>
