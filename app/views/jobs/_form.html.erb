<%# app/views/job/_form %>

<%= form_for [@company, @job] do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %>

  <%= f.label :city %>
  <%= f.text_field :city %>

  <%= f.label :category_id %>
  <%= f.text_field :category_id %>
  <select>
    <%@categories.each do |c| %>
    <option value="#{<%=c.id%>}"><%=c.title%></option>
    <%end%>
  </select>



  <%= f.submit %>
<% end %>
